<!--pages/user/user.wxml-->

<scroll-view scroll-y style='height:auto;background:#f5f5f5'>
  <view wx:if='{{!isLogin}}' class='box box-tb box-align-center white-bg'>
    <image src='../../res/user.png' style='width:90px;height:90px;' mode='aspectFit'></image>
    <text style='margin-top:10px'>点击登录</text>
    <text class='fs28 gray-color'>快乐方式解决手机维修</text>
  </view>

  <view class="weui-cells weui-cells_after-title" style='margin-top:10px;border-top:0px'>
    <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active" style='border-top:0px'>
      <view class="weui-cell__hd">
        <image src="../../res/order.png" mode='aspectFit' style="margin-right: 5px;vertical-align: middle;width:23px; height: 25px;"></image>
      </view>
      <view class="weui-cell__bd fs32">我的订单</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="../../res/profit.png" mode='aspectFit' style="margin-right: 5px;vertical-align: middle;width:23px; height: 25px;"></image>
      </view>
      <view class="weui-cell__bd fs32">我的优惠券</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
     <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="../../res/tele.png" mode='aspectFit' style="margin-right: 5px;vertical-align: middle;width:23px; height: 25px;"></image>
      </view>
      <view class="weui-cell__bd fs32">客服电话</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
     <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="../../res/online.png" mode='aspectFit' style="margin-right: 5px;vertical-align: middle;width:23px; height: 25px;"></image>
      </view>
      <view class="weui-cell__bd fs32">在线客服</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>




</scroll-view>