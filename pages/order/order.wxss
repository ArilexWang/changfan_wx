/* pages/order/order.wxss */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  height: 50vh;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  display: flex;
}

.bottom_section{
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100vw;
  height: 8vh;
  z-index: 1000;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.gray-bg{
  background: #f8f8f8
}